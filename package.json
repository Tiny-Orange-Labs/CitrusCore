{
    "name": "lit-template",
    "version": "0.0.1",
    "scripts": {
        "build-ts": "tsc",
        "build-css": "tailwindcss build -i ./frontend/src/css/main.css -o ./frontend/dist/dev/css/output.css && tailwindcss build -i ./frontend/src/css/main.css -o ./frontend/dist/prod/css/output.css",
        "build-rollup": "rollup -c rollup.config.mjs",
        "build-html": "node _build/build-html.mjs",
        "build-all": "npm run build-ts  && npm run build-rollup && npm run build-html && npm run build-css",
        "watch-css": "tailwindcss -i ./frontend/src/css/main.css -o ./frontend/dist/dev/css/output.css --watch",
        "watch-ts": "tsc --watch",
        "watch-rollup": "",
        "serve": "",
        "live-server": "live-server --no-css-inject ./frontend/dist/dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oliverjessner/lit-template.git"
    },
    "author": "oliver jessner",
    "license": "MIT",
    "devDependencies": {
        "@fortawesome/fontawesome-free": "^6.2.1",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-replace": "^5.0.1",
        "@rollup/plugin-strip": "^3.0.1",
        "@rollup/plugin-terser": "^0.1.0",
        "@rollup/plugin-typescript": "^9.0.2",
        "applause": "^2.0.4",
        "html-minifier": "^4.0.0",
        "lit": "^2.4.1",
        "rollup": "^3.3.0",
        "rollup-plugin-copy": "^3.4.0",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.3"
    }
}
